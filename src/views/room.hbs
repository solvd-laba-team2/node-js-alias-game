<div class="game-room">
  <!-- Left column - Players list -->
  <div class="player-list-left">
    <h3>Team A</h3>
    <h2>Points: 0</h2>
    <ul id="player-list1"></ul>
  </div>

  <!-- Center Content -->
  <div class="center-content">
    <h2 class="game-name">Game Room - Chat for Game {{gameName}}</h2>

    <button id="start-game" class="button">Start game</button>
    <!-- Display current round -->
    <h3>Round:</h3>
    <div id="rounds" class="timer-box">{{currentTurn}} / {{totalRounds}}</div>
    <div class="word-field">
      <h1><img class="loading" src="/assets/loading60.gif" alt="" /></h1>
      <button id="update-word" class="button small-btn">
        <img
          class="icon"
          src="/assets/update-word.svg"
          alt="Update"
          width="24"
          height="24"
        />
      </button>
    </div>

    <!-- Timer for the current turn -->
    <div class="timer-container">
      <h3>Time Left:</h3>
      <div id="timer" class="timer-box">{{roundTime}}</div>
    </div>

    <!-- Display current describer and guessers -->
    <div id="roles">
      <p><strong>Describer:</strong> <span id="describer">Waiting...</span></p>
      <p><strong>Guessers:</strong> <span id="guessers">Waiting...</span></p>
    </div>

    <button id="swap-team-button" class="button">Swap Team</button>

    <!-- Section displaying team messages -->
    <div class="chat-window">
      <h3>Chat History</h3>
      <div class="chat-messages">
        {{#each messages}}
          <p><strong>{{this.username}}:</strong> {{this.message}}</p>
        {{/each}}
      </div>
    </div>

    <!-- Chat input for the current user -->
    <div class="chat-input">
      <h4>Send a message as {{currentUser}}</h4>
      <form
        id="chat-form"
        data-game-id="{{gameName}}"
        data-game-status="{{status}}"
        data-current-user="{{currentUser}}"
        data-total-rounds="{{totalRounds}}"
        data-round-time="{{roundTime}}"
      >
        <input
          id="message-input"
          type="text"
          name="message"
          placeholder="Type your message..."
          autocomplete="off"
          required
        />
        <input type="hidden" name="username" value="{{currentUser}}" />
        <button type="submit">Send</button>
      </form>
    </div>
  </div>

  <!-- Right column - Players list -->
  <div class="player-list-right">
    <h3>Team B</h3>
    <h2>Points: 0</h2>
    <ul id="player-list2"></ul>
  </div>
</div>

